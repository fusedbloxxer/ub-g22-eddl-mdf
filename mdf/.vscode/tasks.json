{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Setup Environment",
            "command": "poetry shell",
            "runOptions": {
                "runOn": "folderOpen"
            },
            "options": {
                "env": {
                    "GEOMSTATS_BACKEND": "pytorch"
                }
            },
            "presentation": {
                "clear": true,
                "focus": true,
                "echo": false,
                "panel": "shared",
                "reveal": "always",
                "showReuseMessage": false,
            }
        }
    ]
}